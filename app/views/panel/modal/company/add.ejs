<div class="modal fade" id="modal_company_add" data-bs-backdrop="static" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title pull-left">Tambah Perusahaan</h2>
                <button type="button" class="close button-icon" data-bs-dismiss="modal" aria-label="Close">
                    <img src="/image/close.svg" alt="Close">
                </button>
            </div>
            
            <form action="/panel/company/add" method="POST">
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <h6>Nama Perusahaan <span class="text-danger">*</span></h6>
                        <input type="text" class="form-control" name="company_name" placeholder="Contoh: PT Polytron" required>
                    </div>

                    <div class="form-group mb-3">
                        <h6>Nomor Telepon</h6>
                        <input type="text" class="form-control" name="company_phone" placeholder="021-xxxxxx">
                    </div>

                    <div class="form-group mb-3">
                        <h6>Alamat Perusahaan</h6>
                        <textarea class="form-control" name="company_address" rows="3" placeholder="Masukkan alamat lengkap..."></textarea>
                    </div>
                </div>
                
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-add-table">
                        <i class="fas fa-save"></i> Simpan
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>